{
  "compilerOptions": {
    "target": "es6", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "lib": ["es6"], // Specify library files to be included in the compilation
    "outDir": "./dist", // Redirect output structure to the 'dist' directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "resolveJsonModule": true, // Allows importing JSON modules
    "skipLibCheck": true // Skip type checking of declaration files
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the 'src' directory
  ],
  "exclude": [
    "node_modules", // Exclude the 'node_modules' directory
    "**/*.spec.ts" // Optionally exclude test files if you have them
  ]
}
